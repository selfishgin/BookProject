@model BookProject.Models.User

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<table class="table">
    <tr>
        <th>First Name:</th>
        <td>@Model.UserFirstname</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model.UserLastname</td>
    </tr>
    <tr>
        <th>Age:</th>
        <td>@Model.UserAge</td>
    </tr>
    <tr>
        <th>Speciality:</th>
        <td>@Model.UserSpeciality</td>
    </tr>
</table>

<a href="@Url.Action("Edit", new { id = Model.UserId })" class="btn btn-warning">Edit</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
