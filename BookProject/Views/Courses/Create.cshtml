@model BookProject.Models.Course

@{
    ViewBag.Title = "Create Course";
}

<h2>Create Course</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Course Name</label>
        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mentor</label>
        @Html.TextBoxFor(m => m.CourseMentor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Required Skills</label>
        @Html.TextBoxFor(m => m.CourseReqSkill, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Duration (Hours)</label>
        @Html.TextBoxFor(m => m.CourseDuration, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(m => m.CoursePrice, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
